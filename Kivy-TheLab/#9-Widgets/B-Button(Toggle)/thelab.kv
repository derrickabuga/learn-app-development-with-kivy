<BoxLayoutExample>:
    orientation: 'vertical'
    Button:
        text: "Abuga"
        color: 0, 1, 1, 1
        size_hint: .5, 1
        pos_hint: {"center_x": .5}
    BoxLayout:
        orientation: 'horizontal'
        spacing: '10dp'
        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"
        Button:
            text: "B4"
    Label:
        text: "Carlton"
        color: 1, 0, 1, 1

