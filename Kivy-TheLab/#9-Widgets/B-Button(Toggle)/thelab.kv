    cols: 3
    ToggleButton:
        text: "OFF"
        on_state: root.on_toggle_but_state(self)
    Button:
        text: 'Click Here'
        on_press: root.on_but_click()
        disabled: not root.can_count
    Label:
        text: root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size: "90dp"
        color: 0, 1, 1, 1

